{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AirScript",
	"patterns": [
		{
			"include": "#keyword"
		},
		{
			"include": "#type"
		},
		{
			"include": "#register"
		},
		{
			"include": "#scope"
		},
		{
			"include": "#field"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#number"
		},
		{
			"include": "#operator"
		},
		{
			"include": "#object"
		}
	],
	"repository": {
		"keyword": {
			"patterns": [{
				"name": "keyword.flow.airscript",
				"match": "\\b(define|over|cycle|for (each|all)?|init|enforce|yield|when|else)\\b"
			}]
		},
		"object": {
			"patterns": [{
				"name": "keyword.other.airscript",
				"match": "\\b(transition|registers?|steps?|constraints?|input)\\b"
			}]
		},
		"register": {
			"patterns": [{
				"name": "variable.language.airscript",
				"match": "\\b(\\$r|\\$n)\\b"
			}]
		},
		"scope": {
			"patterns": [{
				"name": "storage.modifier.airscript",
				"match": "\\b(const|static|public|secret)\\b"
			}]
		},
		"field": {
			"patterns": [{
				"name": "support.type.airscript",
				"match": "\\bprime field\\b"
			}]
		},
		"type": {
			"patterns": [{
				"name": "support.class.type.airscript",
				"match": "\\b(boolean|element)\\b"
			}]
		},
		"comment": {
            "patterns": [
                {
                    "include": "#comment-line"
                }
            ]
        },
        "comment-line": {
            "match": "(?<!tp:)//.*?$",
            "name": "comment.line.airscript"
		},
		"number": {
            "patterns": [
                {
                    "include": "#number-decimal"
                }
            ]
        },
        "number-decimal": {
            "match": "\\b(\\d+(\\.\\d+)?)\\b",
            "name": "constant.numeric.decimal.airscript"
		},
		"operator": {
            "patterns": [
                {
                    "include": "#operator-arithmetic"
                },
                {
                    "include": "#operator-assignment"
                }
            ]
        },
        "operator-arithmetic": {
            "match": "(\\^|\\+|\\-|\\/|\\*)",
            "name": "keyword.operator.arithmetic.airscript"
        },
        "operator-assignment": {
            "match": "(<\\-)",
            "name": "keyword.operator.assignment.airscript"
        }
	},
	"scopeName": "source.airscript"
}